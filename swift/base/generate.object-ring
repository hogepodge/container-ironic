#!/bin/bash
LOCAL_IP=`hostname -I`
cd /etc/swift
mkdir /srv/node/store
swift-ring-builder object.builder create 10 1 1
swift-ring-builder object.builder add \
                   --region 1 \
                   --zone 1 \
                   --ip $LOCAL_IP \
                   --port 6202 \
                   --device store \
                   --weight 100
swift-ring-builder object.builder rebalance

